@model Application.Commands.Republics.Queries.GetAllRepublics.RepublicsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
              Population
            </th>
            <th>
                Square
            </th>
            <th>
                Title
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Republics) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Population)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Square)
            </td>
            <td>
            @item.Title
            </td>
        </tr>
}
    </tbody>
</table>
